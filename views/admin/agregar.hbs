<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post"
            enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" class="form-control" 
                    placeholder="titulo" name="titulo">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" 
                    placeholder="subtitulo" name="subtitulo"></textarea>
                </div>
                <div class="form-group">
                    <label>imagen: <input type="file" class="form-control"
                    name="imagen" id="imagen" /></label>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" 
                    placeholder="cuerpo" name="cuerpo"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>